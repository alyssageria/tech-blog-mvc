<section class="login-page box">
    <div class="form-heading">
        <h1 class="has-background-black has-text-white is-size-3 p-2">Signup:</h1>
    </div>
    <div class="form-section">
        <form class="signup-form" method="POST" class="login-form p-2">
            <div class="field">
                <label for="username-signup" class="is-size-3">Username:</label>
                <input type="text" class="entry-field input" id="username-signup" />
            </div>
            <div>
                <label for="email-signup" class="is-size-3">Email:</label>
                <input type="text" class="entry-field input" id="email-signup" />
            </div>
            <div>
                <label for="password-signup" class="is-size-3">Password:</label>
                <input type="password" class="entry-field input" id="password-signup" />
            </div>
            <div class="submit m-3">
                <button type="submit" class="login-signup-btn button is-black is-large is-fullwidth">Signup</button>
            </div>
        </form>
    </div>
    <div class="is-flex is-justify-content-center">
        <a href="/login"><button type="button" class="button is-black">Login Instead</button></a>
    </div>
</section>

<script src="/js/signup.js"></script>