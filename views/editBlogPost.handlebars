<article class="new-page">
    <section>
        <div>
            <h2 class="m-3 is-size-3 has-text-centered">Edit Post</h2>
        </div>
        <div class="form-section">
            <form class="edit-post-form">
                <div class="m-4 post-title-section">
                    <label class="is-size-4" for="post-title">Title:</label>
                    <input class="input" type="text" name="post-title" id="post-title" value="{{post.title}}" />
                </div>
                <div class="m-4 post-content">
                    <label class="is-size-4" for="post-content">Content:</label>
                    <textarea class="entry-field textarea" id="post-content"
                        name="post-content">{{post.content}}</textarea>
                </div>
                <div class="is-flex is-justify-content-center is-justify-content-space-evenly m-3">
                    <button class="button is-black" type="submit">Update post</button>
                    <button type="button" class="button is-black delete-post-btn">Delete post</button>
                </div>
            </form>
        </div>
    </section>
</article>

{{#if loggedIn}}
<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
{{/if}}