{{#each posts as |post|}}
<div class="box">
    <div class="is-flex is-justify-content-space-between is-align-items-center has-background-black has-text-white p-2">
        <a href="/post/{{id}}" class="links has-text-white is-size-4">{{title}}</a>
        <p>Created by {{user.username}} on {{formatDate created_at}}</p>
    </div>
    <p class="is-size-5 my-4">{{post_content}}</p>
</div>
{{/each}}