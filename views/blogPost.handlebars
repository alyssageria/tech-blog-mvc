<div class="box">
    <div class="is-flex is-justify-content-space-between is-align-items-center has-background-black has-text-white p-2">
        <a href="/post/{{id}}" class="links has-text-white is-size-4">{{title}}</a>
        <p>Created by {{user.username}} on {{formatDate created_at}}</p>
    </div>
    <p class="is-size-5 my-4">{{post_content}}</p>
</div>



{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea class="textarea" name="comment"></textarea>
    </div>

    <div class="is-flex is-justify-content-center m-3">
        <button type="submit" class="button is-black">add comment</button>
    </div>
</form>
{{/if}}

<section class="box m-3">
    <h4 class="is-size-3 has-text-centered">Comments</h2>
        {{#each comments as |comment|}}
        <div class="is-flex is-justify-content-space-between has-background-success-light m-2">
            <p class="p-2">{{comment_text}}.</p>
            <p class="cursive text-mutted p-2"> {{user.username}} on {{formatDate created_at}}</p>
        </div>
        {{/each}}
</section>

<script src="/js/comment.js"></script>